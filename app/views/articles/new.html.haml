.container
  .row
    .col-md-12
      .page-header
        %h1 Create a new article
  .row
    .col-md-12
      - if @article.errors.any?
        - @article.errors.full_messages.each do |msg|
          .alert.alert-warning
            = msg
  .row
    .col-md-12
      = bootstrap_form_for :article, url: articles_path do |f|
        %p
          = f.text_field :title
        %p
          = f.text_area :text
        %p
          = f.primary
