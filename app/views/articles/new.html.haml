.container
  .row
    .col-md-12
      - if @article.errors.any?
        - @article.errors.full_messages.each do |msg|
          .alert.alert-warning
            = msg
  .row
    .col-md-12
      %h1 Create a new article
      = form_for :article, url: articles_path do |f|
        %p
          = f.label :title
          %br
          = f.text_field :title
        %p
          = f.label :text
          %br
          = f.text_area :text
        %p
          = f.submit
