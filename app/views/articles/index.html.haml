.container
  .row
    .col-md-12
      .page-header
        %h1
          Dashboard
  .row
    .col-md-12
      .ul.list-group
        -@articles.each do |article|
          .panel.panel-default
            .panel-heading
              %strong
                = article.title
              .pull-right
                = link_to 'Edit', edit_article_path(article)
                &nbsp;
                = link_to 'Delete', article_path(article), method: :delete
            .panel-body
              = article.text
