.container
  .row
    .col-md-12
      .page-header
        %h1
          Dashboard
  .row
    .col-md-12
      .ul.list-group
        -@articles.each do |article|
          .panel.panel-default
            .panel-heading
              %strong
                = article.title
              .pull-right
                = link_to '<i class="fa fa-pencil"></i>'.html_safe,
                  edit_article_path(article)
            .panel-body
              = article.text
